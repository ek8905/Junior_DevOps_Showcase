[ req ]
default_bits       = 4096
prompt             = no
default_md         = sha256
distinguished_name = dn
req_extensions     = req_ext

[ dn ]
CN = system:node:{{ worker_hostname }}.project.local
O = system:nodes

[ req_ext ]
subjectAltName = @alt_names

[ alt_names ]
DNS.1 = {{ worker_hostname }}
DNS.2 = k8sworker.project.local
IP.1  = 127.0.0.1
IP.2  = {{ worker_ip }}

